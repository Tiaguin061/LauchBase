{% extends "layout.njk" %}

{% block content %}

        {% block head %}
            <title>Gym Manager - {{member.name}} </title>
        {% endblock %}

    <div class="card">
        <section class="avatar" 
        style="background: url({{ member.avatar_url}}) no-repeat center center / cover;">

        </section>
        <section class="details">
            <h3>Detalhes / ID: {{member.id}}</h3>
            <div class="item">
                <div>Membro</div>
                <div>{{ member.name}}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{ member.birth}}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{ member.email}}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>
                    {{ "Masculino" if member.gender == "M" else "Feminino"}}
                </div>
            </div>
            
            <div class="item">
                <div>Tipo sanguíneo</div>
                <div>{{member.blood}}</div>
            </div>

            <div class="item">
                <div>Peso (kg)</div>
                <div>{{member.weight}}</div>
            </div>

            <div class="item">
                <div>Altura (cm)</div>
                <div>{{member.height}}</div>
            </div>

            <div class="item alumni-edit">
                <div>Aluno de</div>
                <div>
                    <span style="background-image: url({{member.instructor_avatar}}">
                    </span>
                    {{member.instructor_name}}
                    </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{member.created_at}}</div>
            </div>

            <a href="/members/{{member.id}}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock content %}