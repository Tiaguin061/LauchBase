{% extends "layout.njk" %}

{% block content %}

<section class="forgot login container form">

    <form method="POST" action="/users/forgot-password">
        <div class="header">
            <h3>Esqueceu a senha?</h3>
        </div>

        <div class="item">
            <div>Email</div>
            <div class="input">
                <input type="email"
                name="email"
                placeholder="Digite o email cadastrado"
                value="{{ user.email }}"
                onblur="Validate.apply(this, 'isEmail')">
            </div>
        </div>

        <button class="button" type="submit">
            Recuperar senha
        </button>

        <div class="footer">
            <ul>
                <li>
                    <p>NÃ£o tem uma conta?</p>
                    <a href="/users/register">Registre-se</a>
                </li>
            </ul>
        </div>
    </form>
</section>

{% endblock content %}
