{% extends "layout.njk" %}

{% block content %}

<section class="forgot login container form">

    <form method="POST" action="/users/password-reset">
        <div class="header">
            <h3>Nova senha</h3>
        </div>

        <div class="fields">
            {% include 'session/reset-fields.njk' %}
        </div>

        <button class="button" type="submit">
            Nova senha
        </button>

        <div class="footer">
            <ul>
                <li>
                    <p>Não tem uma conta?</p>
                    <a href="/users/register">Registre-se</a>
                </li>
                <li>
                    <p>Token inválido?</p>
                    <a href="/users/forgot-password">Gerar novo Token</a>
                </li>
            </ul>
        </div>
    </form>
</section>

{% endblock content %}
